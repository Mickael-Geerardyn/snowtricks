{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        {% if app.user %}
            <div class="mb-3">
                Vous êtes connectés en tant que {{ app.user.userIdentifier
                }}, <a
                        href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Nouveau mot de passe</h1>

        <div class="border border-dark p-5">
            {{ form_start(resetFormType) }}

            {{ form_row(resetFormType.password) }}
            {{ form_row(resetFormType.confirmationPassword) }}

            <button class="btn btn-lg btn-primary mt-4" type="submit">Envoyer</button>

            {{ form_end(resetFormType) }}

        </div>
    </div>
{% endblock %}
