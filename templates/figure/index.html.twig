{% extends 'base.html.twig' %}

{% block title %}{{ figure.getName() }}{% endblock %}

{% block body %}
    <div class="container-fluid px-0 gx-5 position-relative">
        <div class="position-absolute top-0 end-0">
        <div class="row gx-5 border border-dark py-3 mt-4 me-4">
            <div class="col">
            <a href="" class="link-dark"><svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="25" height="25"
                        fill="currentColor" class="bi
                                     bi-pencil-fill" viewBox="0 0
                                     16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                </svg></a></div>
            <div class="col"><a href="" class="link-dark"><svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="25" height="25"
                        fill="currentColor" class="bi bi-trash

                                   " viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                </svg></a></div>
        </div>
        </div>
        <div class="container text-center position-relative">
            <img src="{{ asset('images/' ~ figure.images[0].getPath()) }}" class="img-fluid
            mx-xl-auto d-block object-fit-contain opacity-50" alt="">
            <h2 class="position-absolute top-50 start-50 translate-middle
            fw-bolder text-uppercase">{{ figure.getName() }}</h2>
        </div>

    <div class="container-fluid mt-lg-4 mt-2 px-1 px-lg-4">
        <div class="row row-cols-xl-5 row-cols-lg-3 row-cols-1 g-4 align-content-around">
            {% for image in figure.images %}
            <div class="col mt-5">
                <div class="text-center">
                    <img src="{{ asset('images/' ~ image.getPath()) }}"
                         class="rounded w-50 img-fluid" alt="">
                </div>
            </div>
            {% endfor %}
        </div>
            <div class="text-center fs-5 mt-5">
                <p>{{ figure.getDescription() }}</p>
            </div>
        <div class="container mt-5">
            <div class="row row-cols-auto gx-5 justify-content-center">
                <div class="col">
                <p class="text-center text-capitalize border px-4 py-2
                rounded">{{ figure
                        .groupe
                            .getName()
                        }}</p>
                </div>
                <div class="col">
            <p class="col text-center border px-4 py-2
                rounded">Créé le: {{ figure
                        .getCreatedAt()
                    }}</p>
                </div>
            {% if (figure.getUpdatedAt() is not empty) %}
            <p class="text-center border px-4 py-2
                rounded">{{ figure.getUpdatedAt() }}</p>
            {% endif %}
            </div>
        </div>
        {% if (app.user is not empty) %}
        <div class="mt-3 bg-secondary" style="height: 0.1rem; width: 75%;
        margin: auto;"></div>
        <div class="container mt-5 mb-5">
            {{ form_start(form, { 'attr': {'class':'row row-cols-2 gx-5
            justify-content-center align-items-center'}}) }}
                <div class="col col-8 d-flex justify-content-end">
                    <div class="form-floating w-75">
                        {{ form_row(form.content) }}
                    </div>
                </div>
                <div class="col col-4 d-flex justify-content-center
                align-items-center">
                    <div class="d-grid gap-2 d-md-block">
                        {{ form_row(form.button) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        {% endif %}
        <div class="mt-3 mb-5 bg-secondary" style="height: 0.1rem; width: 75%;
        margin: auto;"></div>
        {% if (figure.messages is not empty) %}
            <div class="container">
                <div class="row row-cols-2 gy-5 align-items-center">
                    {% for message in figure.messages %}
                    <div class="d-flex justify-content-end col col-5">
                        <img src="{{ asset('images/profile.png') }}"
                             alt="..." class="img-fluid align-self-center"
                             style="width: 4rem;">
                    </div>
                    <div class="col col-7">
                        <p class="mb-0 fs-5">{{ message.getContent() }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
    </div>
{% endblock %}
